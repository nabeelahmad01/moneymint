generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  name          String?
  balance       Float    @default(0)
  depositLink   String?
  referralCode  String   @unique
  referredBy    String?
  isVerified    Boolean  @default(false)
  isAdmin       Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  deposits      Deposit[]
  withdrawals   Withdrawal[]
  purchases     PackagePurchase[]
  dailyEarnings DailyEarning[]
  taskHistory   TaskHistory[]
  commissionsReceived ReferralCommission[] @relation("CommissionReceiver")
  commissionsGenerated ReferralCommission[] @relation("CommissionGenerator")
}

model Deposit {
  id            String   @id @default(cuid())
  userId        String
  amount        Float
  transactionId String
  screenshot    String
  status        String   @default("pending")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Withdrawal {
  id              String   @id @default(cuid())
  userId          String
  amount          Float
  userDepositLink String
  status          String   @default("pending")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model InvestmentPackage {
  id              String   @id @default(cuid())
  name            String
  description     String
  price           Float
  dailyReturn     Float
  totalDays       Int
  totalReturn     Float
  icon            String   @default("ðŸ’Ž")
  color           String   @default("primary")
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  
  purchases       PackagePurchase[]
}

model PackagePurchase {
  id              String   @id @default(cuid())
  userId          String
  packageId       String
  amountPaid      Float
  dailyReturn     Float
  totalDays       Int
  daysCompleted   Int      @default(0)
  totalEarned     Float    @default(0)
  status          String   @default("active")
  purchasedAt     DateTime @default(now())
  expiresAt       DateTime
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  package         InvestmentPackage @relation(fields: [packageId], references: [id], onDelete: Cascade)
  earnings        DailyEarning[]
}

model DailyEarning {
  id              String   @id @default(cuid())
  userId          String
  purchaseId      String
  amount          Float
  day             Int
  claimedAt       DateTime @default(now())
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  purchase        PackagePurchase @relation(fields: [purchaseId], references: [id], onDelete: Cascade)
}

model Task {
  id          String        @id @default(cuid())
  title       String
  description String
  reward      Float
  url         String?
  icon        String        @default("ðŸ“‹")
  type        String        @default("daily") // daily, one_time
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  history     TaskHistory[]
}

model TaskHistory {
  id          String   @id @default(cuid())
  userId      String
  taskId      String
  earned      Float
  completedAt DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  task        Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
}

model ReferralCommission {
  id          String   @id @default(cuid())
  receiverId  String
  generatorId String
  amount      Float
  type        String
  description String
  createdAt   DateTime @default(now())

  receiver    User     @relation("CommissionReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
  generator   User     @relation("CommissionGenerator", fields: [generatorId], references: [id], onDelete: Cascade)
}

model OTP {
  id        String   @id @default(cuid())
  email     String
  code      String
  type      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}
